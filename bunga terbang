<script>
function lanjut1() {
  const nama = document.getElementById('nama').value.trim();
  if (!nama) {
    alert("Isi dulu namanya ya!");
    return;
  }

  document.getElementById('nama2').innerText = nama;
  document.getElementById('nama3').innerText = nama;
  document.getElementById('namaMotiv').innerText = nama;
  document.getElementById('namaUser').innerText = nama;

  document.getElementById('step1').classList.add('hidden');
  document.getElementById('step2').classList.remove('hidden');
}

function lanjut2(yes) {
  if (!yes) {
    alert("Yah, kamu gak mau hadiah ğŸ˜¢");
    return;
  }
  document.getElementById('step2').classList.add('hidden');
  document.getElementById('step3').classList.remove('hidden');
}

function lanjut3(yes) {
  if (!yes) {
    alert("Kamu yakin gak mau? ğŸ˜­");
    return;
  }

  document.getElementById('step3').classList.add('hidden');
  document.getElementById('motivation').classList.remove('hidden');

  // ğŸ•’ tampilkan motivasi agak lama
  setTimeout(() => {
    document.getElementById('motivation').classList.add('hidden');
    document.getElementById('final').classList.remove('hidden');

    // ğŸŒ¸ bunga mekar satu-satu
    for (let i = 0; i < 6; i++) {
      setTimeout(() => {
        const flower = document.createElement('div');
        flower.classList.add('flower');
        flower.style.left = `${10 + i * 15}%`;
        document.body.appendChild(flower);

        const stem = document.createElement('div');
        stem.classList.add('stem');
        flower.appendChild(stem);

        for (let k = 0; k < 6; k++) {
          const petal = document.createElement('div');
          petal.classList.add('petal');
          petal.style.setProperty('--angle', `${k * 60}deg`);
          flower.appendChild(petal);
        }
      }, i * 900);
    }

    // â˜„ï¸ meteor di belakang tulisan
    for (let j = 0; j < 10; j++) {
      const m = document.createElement('div');
      m.classList.add('meteor');
      m.style.animationDelay = `${Math.random() * 4}s`;
      document.body.appendChild(m);
    }
  }, 9000); // durasi motivasi 9 detik
}
</script>
